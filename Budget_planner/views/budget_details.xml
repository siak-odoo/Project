<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="budget_details">
        <t t-call="website.layout">
            <section style="background-color: #fff;">
                <div class="container py-6">
                    <div class="row justify-content-center">
                        <div class="col-md-12">
                            <div class="card shadow-1 border rounded-4 m-2">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h3><t t-esc="budget.name"/></h3>
                                            <div class="mt-2 mb-2 text-muted medium">
                                                <span>  Amount :<t t-esc="budget.amount"/></span>
                                            </div>
                                            <div class="mt-2 mb-2 text-muted medium">
                                                <span> budget category : <t t-esc="budget.budget_category"/></span>
                                            </div>
                                    
                                            <div class="mt-2 mb-2 text-muted">
                                                <h4>expense cost : <t t-esc="budget.expense_cost"/></h4>
                                            </div>
                                            <div class="mt-2 mb-2 text-muted">
                                                <h4>saving cost : <t t-esc="budget.savings_cost"/></h4>
                                            </div>
                                        </div>                            
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </t>
    </template>


</odoo>